<div class="row mt-4">
  <div class="col-md-6">
    <h3>Update Post:</h3>

    <form data-id={{id}} class="form update-blog">
      <div class="form-group">
        <label for="blog-title">Title:</label>
        <input value={{title}} class="form-input" type="text" id="updated-title" name="updated-title" />
      </div>
      <div class="form-group">
        <label for="blog-content">Content:</label>
        <textarea class="form-input" id="updated-content" name="updated-content">{{content}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">SAVE</button>
      </div>
    </form>
  </div>
  <script src="/js/editblog.js"></script>