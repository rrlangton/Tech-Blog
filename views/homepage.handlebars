<!-- Loop over each object in the array -->
{{#each blogs as |blog| }}
<div class="card mb-4">
  <div class="card-body">
    <div class="row">
      <div class="col-md-5">
        <p>Created by {{blog.user.name}} on {{format_date blog.date_created}}</p>
      </div>
      <div class="col-md-7">
        <h1 class="card-title">{{blog.title}}</h1> 
        <p class="card-text">{{blog.content}}</p>
        <!-- Add form for commenting -->
        <form action="/comment" method="post">
          <input type="hidden" name="blog_id" value="{{blog.id}}">
          <div class="form-group">
            <label for="post-comment">Comment:</label>
            <textarea class="form-control" id="post-comment" name="post-comment" rows="3"></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Submit Comment</button>
        </form>
      </div>
    </div>
  </div>
</div>
{{/each}}
