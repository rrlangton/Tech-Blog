<div class="row">
  <div class="col-auto">
    <h2>Blog Posts:</h2>
  </div>
</div>
  {{#if blogs.length}}
  <div class="col-md-6 blog-list">
    <h3>My Blog Posts:</h3>

    {{#each blogs as |blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blog/{{blog.id}}">{{blog.title}}</a></h4>
      </div>
      <h5>Created by {{blog.user.username}} on {{format_date blog.date_created}}</h5>
      <div class="col-md-8">
        <h6><a href="/blog/{{blog.id}}">{{blog.content}}</a></h6>
      </div>

      <div class="row mt-4">
      <div class="col-md-6">
      <div class="form-group">
        <label for="blog-comment">Comment:</label>
        <textarea class="form-input" id="blog-comment" name="blog-comment"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/blog.js"></script>
